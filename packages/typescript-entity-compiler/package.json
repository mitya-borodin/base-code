{
  "version": "1.5.8",
  "name": "@rtcts/typescript-entity-compiler",
  "description": "Typescript compiler for entities",
  "author": "Dmitriy Borodin <dmitriy@borodin.site> (http://borodin.site)",
  "homepage": "https://github.com/mitya-borodin/rtcts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:mitya-borodin/rtcts.git"
  },
  "keywords": [
    "typescript",
    "entity",
    "compiler",
    "validation",
    "type-safety",
    "run-time type checking",
    "database schema as code"
  ],
  "bugs": {
    "email": "dmitriy@borodin.site",
    "url": "https://github.com/mitya-borodin/rtcts/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "module": "dist/typescript-entity-compiler.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json",
    "fmt": "prettier --write **/*.{ts,js,json}",
    "lint": "tsdx lint src test --fix",
    "test": "tsdx test",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "prepare": "tsdx build --tsconfig tsconfig.build.json",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "outdated": "npm-check-updates",
    "upgrade": "npm-check-updates -u --target minor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose"
    }
  },
  "lint-staged": {
    "*.(ts|js|json)": [
      "pretty-quick --staged --pattern **/*.{ts,js,json} --verbose --bail"
    ],
    "src/**/*.(ts|js)": [
      "npm run lint"
    ],
    "test/**/*.(ts|js)": [
      "npm run lint"
    ]
  },
  "size-limit": [
    {
      "path": "dist/typescript-entity-compiler.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/typescript-entity-compiler.esm.js",
      "limit": "20 KB"
    }
  ],
  "dependencies": {
    "@rtcts/isomorphic": "^1.5.8"
  },
  "devDependencies": {
    "@types/moment": "^2.13.0",
    "moment": "^2.29.1",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "npm-check-updates": "^11.1.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  }
}
